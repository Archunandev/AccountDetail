<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/top_app_bar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:background="?attr/colorPrimary"
            android:gravity="center_horizontal" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ACCOUNT SETUP"
                android:textAlignment="center"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Account Master"
            android:textColor="@color/black"
            android:textSize="18sp"
            />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:focusableInTouchMode="true"
                android:visibility="visible"
                tools:targetApi="lollipop">

                <EditText
                    android:id="@+id/textInputEditTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:text="Pakir"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="text|textNoSuggestions"
                    android:maxLength="70"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingLeft="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                tools:targetApi="lollipop">

                <EditText
                    android:id="@+id/textInputEditTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="166, South Street"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="text|textNoSuggestions"
                    android:maxLength="70"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:imeOptions="actionNext"
                    android:hint="Address Line-1"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingLeft="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutadd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                tools:targetApi="lollipop">

                <EditText
                    android:id="@+id/textInputEditTextadressline2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="Tvs tollgate"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:hint="Address Line-2"
                    android:imeOptions="actionDone"
                    android:paddingStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingLeft="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutMobileadd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                tools:targetApi="lollipop">

                <EditText
                    android:id="@+id/textInputEditTextadressline3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="Kajamalai"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:hint="Address Line-3"
                    android:imeOptions="actionDone"
                    android:paddingStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingLeft="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutMobileadd3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                tools:targetApi="lollipop">

                <EditText
                    android:id="@+id/textInputEditTextaddress3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="Trichy"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:hint="Address Line-4"
                    android:imeOptions="actionDone"
                    android:paddingStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingLeft="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutMobileadd5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                tools:targetApi="lollipop">

                <EditText
                    android:id="@+id/textInputEditTextaddress5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="602020"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:hint="Address Line-5"
                    android:imeOptions="actionDone"
                    android:paddingStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingLeft="8dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Account Transfer"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:focusableInTouchMode="true"
                android:background="@android:color/white"
                android:visibility="visible"
                tools:targetApi="lollipop">

                <EditText
                    android:id="@+id/textInputEditTextNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="04343 0349348 843085"
                    android:hint="Number"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="number"
                    android:maxLength="70"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingLeft="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutdater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:focusableInTouchMode="true"
                android:background="@android:color/white"
                android:visibility="visible"
                tools:targetApi="lollipop">

                <EditText
                    android:id="@+id/textInputEditTextdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:text="04/04/2021"
                    android:hint="Date"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingLeft="8dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutMobileaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                tools:targetApi="lollipop">

                <EditText
                    android:id="@+id/textInputEditTextaccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="834 344 434"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="text|number"
                    android:hint="Account"
                    android:imeOptions="actionDone"
                    android:paddingStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingLeft="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutMobileamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                tools:targetApi="lollipop">

                <EditText
                    android:id="@+id/textInputEditTextamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="230/-"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="number"
                    android:hint="Amount"
                    android:imeOptions="actionDone"
                    android:paddingStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingLeft="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/project_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/project_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Dr/Cr"
                    android:textSize="12sp"
                    android:layout_marginLeft="8dp" />

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:spinnerMode="dialog"
                    android:background="#dddddd"
                    android:layout_marginTop="2dp"
                    tools:targetApi="lollipop" >
                </Spinner>

            </LinearLayout>

            <Button
                android:id="@+id/update_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:text="Refresh"
                android:textAllCaps="true"
                android:clickable="true"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="26dp"
                android:background="@color/purple_500"
                android:focusable="true" />

            <Button
                android:id="@+id/add_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:text="Add Acoount"
                android:textAllCaps="true"
                android:clickable="true"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="26dp"
                android:background="@color/purple_500"
                android:focusable="true" />

        </LinearLayout>

        </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>